{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "exclude": ["./node_modules/", "./tests"],
  "include": ["src"]
}
